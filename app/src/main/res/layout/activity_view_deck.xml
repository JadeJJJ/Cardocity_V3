<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View_Deck">

    <LinearLayout
        android:id="@+id/llDeckEdits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtViewDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="View Deck"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/txDeckName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deck Name" />

        <EditText
            android:id="@+id/editDeckName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:ems="10"
            android:hint="Deck Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/txColl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Collection Name" />

        <EditText
            android:id="@+id/editColl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:ems="10"
            android:hint="Collection Name"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/txTot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Number of Cards" />

        <EditText
            android:id="@+id/editTot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <LinearLayout
            android:id="@+id/llBtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditDeck"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal"
                android:layout_weight="1"
                android:text="Edit Deck" />

            <Button
                android:id="@+id/btnDeleteDeck"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="clip_horizontal"
                android:layout_weight="1"
                android:text="Delete Deck" />

        </LinearLayout>

        <Button
            android:id="@+id/btnFinaliseDeck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Finalise Edit" />

        <Button
            android:id="@+id/btnCancelDeckEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>