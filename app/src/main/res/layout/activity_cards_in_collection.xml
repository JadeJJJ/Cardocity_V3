<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <SearchView
                android:layout_width="250dp"
                android:layout_height="60dp">

            </SearchView>

            <Space
                android:layout_width="5dp"
                android:layout_height="60dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnAddtoDeck"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Add Item to Deck" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Cards in Collection"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <Spinner
                android:id="@+id/spnSelectItem"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:contentDescription="@string/app_name" />

            <Space
                android:layout_width="5dp"
                android:layout_height="60dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSelectItem"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Select Item" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="393dp"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/lstvCardsName"
                android:layout_width="150dp"
                android:layout_height="380dp"
                android:padding="2dp" />

            <ListView
                android:id="@+id/lstvCardsType"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:padding="2dp" />

            <ListView
                android:id="@+id/lstvCardsNumCards"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:padding="2dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp">

            <Button
                android:id="@+id/addItem"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Add Item" />

            <Button
                android:id="@+id/btnGen"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:text="Generate" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtDisplayGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Goal:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDisplayTotalGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Goal:"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_side_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>